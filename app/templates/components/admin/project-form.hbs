<div class="o-layout">
  <div class="o-layout__item u-3/4">
    <div class="o-layout">
      <div class="o-layout__item u-1/2">
        <label>Title</label>
        {{input value=project.title}}
      </div>
      <div class="o-layout__item u-1/2">
        <label>Slug</label>
        {{input value=project.slug}}<br>
      </div>
    </div>
    <div class="o-layout">
      <div class="o-layout__item">
        <label>Subtitle</label>
        {{input value=project.subtitle}}<br>
      </div>
    </div>

    <div class="o-layout">
      <div class="o-layout__item u-2/3">
        <label>Excerpt</label>
        {{textarea value=project.excerpt rows="6"}}
      </div>
      <div class="o-layout__item u-1/3">
        <label>Meta</label>
        {{textarea value=project.meta rows="6"}}
      </div>
    </div>
  </div>
  <div class="o-layout__item u-1/4">
    <div class="o-layout">
      <div class="o-layout__item u-1/2">
        <label>Visible</label>
        {{input checked=project.visible type="checkbox"}}
      </div>
    </div>
  </div>
</div>

<div {{action 'save' project}} class="o-btn">Save</div>
<div {{action 'deleteRecord' project}} class="o-btn">Delete</div>

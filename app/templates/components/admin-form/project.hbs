<div class="o-layout">
  <div class="o-layout__item u-3/4">
    <div class="o-layout">
      <div class="o-layout__item u-1/2">
        <label>{{t "admin.project.field.title"}}</label>
        <Input @value={{@record.title}} />
      </div>
      <div class="o-layout__item u-1/2">
        <label>{{t "admin.project.field.slug"}}</label>
        <Input @value={{@record.slug}} />
      </div>
    </div>
    <div class="o-layout">
      <div class="o-layout__item">
        <label>{{t "admin.project.field.subtitle"}}</label>
        <Input @value={{@record.subtitle}} />
      </div>
    </div>

    <div class="o-layout">
      <div class="o-layout__item u-2/3">
        <label>{{t "admin.project.field.excerpt"}}</label>
        <Textarea @value={{@record.excerpt}} rows="6" />
      </div>
      <div class="o-layout__item u-1/3">
        <label>{{t "admin.project.field.meta"}}</label>
        <Textarea @value={{@record.metaInfo}} rows="6" />
      </div>
    </div>

    <div class="o-layout">
      <div class="o-layout__item u-1/1">
        <label>{{t "admin.project.field.content"}}</label>
        <Textarea @value={{@record.content}} rows="12" />
      </div>
    </div>
  </div>
  <div class="o-layout__item u-1/4">
    <div class="o-layout">
      <div class="o-layout__item u-1/2">
        <label>{{t "admin.project.field.visible"}}</label>
        <Input @checked={{@record.visible}} type="checkbox" />
      </div>
    </div>
  </div>
</div>

<AdminForm::CustomFields @record={{@record}} />

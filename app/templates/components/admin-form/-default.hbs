<div class="o-layout">
  <div class="o-layout__item u-3/4">
    <div class="o-layout">
      <div class="o-layout__item u-1/2">
        <label>Title</label>
        {{input value=model.title}}
      </div>
      <div class="o-layout__item u-1/2">
        <label>Slug</label>
        {{input value=model.slug}}<br>
      </div>
    </div>
  </div>
</div>

<div {{action 'save'}} class="o-btn">Save</div>
<div {{action 'deleteRecord'}} class="o-btn">Delete</div>

{{#animated-value
  @project.slug
  use=this.backgroundTransition
  duration=this.duration
as |slug|
}}
  <div class="{{elem "background"}} {{elem "background"}}--{{slug}}"></div>
{{/animated-value}}

<header class={{elem "header"}}>
  {{#animated-value
    @project.title
    use=this.typoTransition
    duration=this.duration
  as |title|
  }}
    <h1 class={{elem "title"}}>
      {{title}}
    </h1>
  {{/animated-value}}
  {{#animated-value
    @project.subtitle
    use=this.typoTransition
    duration=this.duration
  as |subtitle|
  }}
    <div class={{elem "subtitle"}}>
      {{subtitle}}
    </div>
  {{/animated-value}}
</header>

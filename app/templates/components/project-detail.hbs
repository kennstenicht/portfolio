<article class={{bem this.block}}>
  {{#animated-value @project as |project|}}
    <ProjectDetail::Header
      @project={{project}}
    />
  {{/animated-value}}

  <div class={{bem this.block "content"}}>
    <ProjectDetail::Summary
      @project={{@project}}
    />
    <div class={{bem this.block "wrapper"}}>
      {{component (concat "project-detail/" @project.slug) project=@project}}
    </div>
  </div>
</article>
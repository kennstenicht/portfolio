<div
  class={{bem this.block}}
  ...attributes
>
  <div class="o-layout">
    <div class="o-layout__item u-10/12">
      <h1>
        {{this.headline}}
      </h1>
    </div>
    <div class="o-layout__item u-2/12 u-align-right">
      <LinkTo @route="admin.projects.new">
        {{t "admin.action.new"}}
      </LinkTo>
    </div>
  </div>

  {{component (concat "admin-form/" this.modelName) record=@record}}

  <button class="o-btn" {{action "save"}}>
    {{t "admin.action.save"}}
  </button>
  <button class="o-btn" {{action "deleteRecord"}}>
    {{t "admin.action.delete"}}
  </button>
</div>

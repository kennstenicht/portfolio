<div class="o-layout">
  <div class="o-layout__item u-10/12">
    <h1>{{t "admin.page.headline.index"}}</h1>
  </div>
  <div class="o-layout__item u-2/12 u-align-right">
    <LinkTo @route="admin.pages.new">
      {{t "admin.action.new"}}
    </LinkTo>
  </div>
</div>

<SortableGroup
  class="o-flex-table"
  onChange="reorderItems" as |group|
>
  {{#each this.pages as |page|}}
    <SortableItem
      class="o-flex-table__row"
      @model={{page}}
      @group={{group}}
      @handle=".handle"
    >
      <div class="o-flex-table__column u-12/12">
        {{! template-lint-disable no-bare-strings }}
        <span class="handle">&varr;</span>
        <LinkTo @route="admin.pages.edit" @model={{page}}>
          {{page.title}}
        </LinkTo>
      </div>
    </SortableItem>
  {{/each}}
</SortableGroup>